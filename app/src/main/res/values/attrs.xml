<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FourPointGradientView">
        <attr name="colorTopLeft" format="color" />
        <attr name="colorTopRight" format="color" />
        <attr name="colorBottomLeft" format="color" />
        <attr name="colorBottomRight" format="color" />
    </declare-styleable>

    <declare-styleable name="ProgressBarView">
        <attr name="ringBackground" format="color|reference" />
        <attr name="autoCalculate" format="boolean"/>
        <attr name="rotate" format="boolean"/>
        <attr name="ringStroke" format="reference" />
        <attr name="foregroundStrokeCap" format="enum">
            <enum name="butt" value="0" />
            <enum name="round" value="1" />
            <enum name="square" value="2" />
        </attr>
        <attr name="ringThickness" format="dimension|fraction" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="progress" format="reference" />
        <attr name="startAngle" format="float" />
    </declare-styleable>
</resources>