<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black">

    <ImageView
        android:id="@+id/param_icon"
        android:layout_width="wrap_content"
        android:layout_marginEnd="8.25dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        tools:src="@drawable/settings_fingerprint"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/param_text"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center|start"
        style="@style/SettingsParams"
        android:layout_height="wrap_content"
        tools:text="Вход по отпечатку пальца" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/param_switch"
        android:layout_width="52dp"
        android:layout_height="32dp"
        android:checked="true"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track" />
</LinearLayout>